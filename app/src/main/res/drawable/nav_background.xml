<?xml version="1.0" encoding="utf-8"?>
<animated-selector xmlns:android="http://schemas.android.com/apk/res/android"
    >
    <item  android:state_checked="true" android:id="@+id/pressed" >
        <shape  >
            <solid android:color="@color/ripple_color"/>
            <corners
                android:radius="17dp"/>
            <stroke
                android:color="#ffffff"
                android:width="1dp"/>
        </shape>
    </item>
    <item  android:id="@+id/defaulta">
        <shape  >
            <solid android:color="@color/black"/>
            <corners
                android:radius="17dp"/>
        </shape>
    </item>
</animated-selector>